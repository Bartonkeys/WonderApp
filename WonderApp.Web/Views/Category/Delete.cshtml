@using WonderApp.Web.Extensions
@model WonderApp.Models.CategoryModel

@{
    ViewBag.Title = "Delete";
}

@Html.ClientMessages()
<div class="panel panel-default">
    <div class="panel-body">
        <p>Are you sure you want to delete category <strong>@Html.DisplayFor(model => model.Name)</strong>?</p>
    </div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Name)
        <div class="panel-footer">
            <div id="container_actions" class="row">
                <div class="col-md-offset-5 col-md-7">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </div>
        </div>
        @Html.ActionLink("Back to Categories", "Index")
    }
</div>

