@model IEnumerable<WonderApp.Models.CostModel>

@{
    ViewBag.Title = "Index";
}

<h2>Cost Ranges</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create")">Create cost range</a>
</p>
@if (!Model.Any())
{
    <p>No cost ranges at moment.</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Range)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Range)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
}